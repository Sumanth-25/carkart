@model join_loginSignup.Models.Model

@{
    ViewBag.Title = "Welcome";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<body>





    <div class="content-wrapper">
        <div class="container">
            <div class="row pad-botm">
                <div class="col-md-12">
                    <h2>Profile</h2>
                    <div>
                        Welcome @Session["email"]
                    </div>
                </div>
            </div>
            <br />
            @*<div class="link">
                    @Html.ActionLink("Logout", "Index", null, new { style = "color:MediumBlue;text-decoration:none;font-weight: bold;" })
                </div>

                <div class="link">
                    @Html.ActionLink("Profile", "prifile", null, new { style = "color:MediumBlue;text-decoration:none;font-weight: bold;" })
                </div>*@
            <form>
                <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-success">

                            <div class="panel-body">
                                <div class="table-responsive">


                                    @if (Model != null)
                                    {
                                        if (Model.Enrollsinfo.Count > 0)
                                        {
                                            <table class="table table-striped table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>name</th>
                                                        <th>email</th>
                                                        <th>phoneNumber</th>
                                                        <th>Password</th>
                                                    </tr>
                                                    @foreach (var item in Model.Enrollsinfo)
                                                    {
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelitem => item.name) </td>
                                                            <td>@Html.DisplayFor(modelitem => item.email)</td>
                                                            <td>@Html.DisplayFor(modelitem => item.phoneNumber)</td>
                                                            <td>@Html.DisplayFor(modelitem => item.password)</td>
                                                            @*<td>
                                                                    @Html.ActionLink("Edit", "UpdateCustomer", new { Id = item.Id })
                                                                </td>*@
                                                            <td>
                                                                @Html.ActionLink("Delete Account", "Delete", new { Id = item.Id })
                                                            </td>
                                                        </tr>

                                                    }

                                                </thead>
                                            </table>
                                        }
                                        else
                                        {
                                            <b>No Details Found.</b>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <br />
    <br />
    <div class="link">
        @Html.ActionLink("Back", "userpage", null, new { style = "color:white;text-decoration:none;font-weight: bold;" })
    </div>

    <script src="../../Content/assets/js/jquery-1.10.2.js"></script>
    <script src="../../Content/assets/js/bootstrap.js"></script>
    <script src="../../Content/assets/js/custom.js"></script>
</body>
</html>

