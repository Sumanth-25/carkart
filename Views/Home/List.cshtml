@model IEnumerable<join_loginSignup.Models.Model2>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<br />
<div class="link">
    @Html.ActionLink("Logout", "admin", null, new { style = "color:white;text-decoration:none;font-weight: bold;" })
</div>



<p class="createLink">
    @Html.ActionLink("Create New", "AddItem", null, new { style = "color:white;text-decoration:none;font-weight: bold;" })
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.images)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCar)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <a href="~/upload/@(item.images)" target="_blank">

                    <img src="~/upload/@(item.images)" style="width: 150px; height: 100px;" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCar)
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", new { Id = item.Id }, new { style = "text-decoration:none; font-family: 'Poppins',sans-serif;" }) |
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "Delete", new { Id = item.Id }, new { style = "text-decoration:none; font-family: 'Poppins',sans-serif;" })
            </td>
        </tr>
    }

</table>
